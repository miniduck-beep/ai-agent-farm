version: '3.8'

services:
  # Redis - брокер сообщений для Celery
  redis:
    image: "redis:alpine"
    ports:
      - "6379:6379"

  # FastAPI для автоматизации через n8n  
  api:
    build: .
    command: sh -c "cp requirements_minimal.txt requirements.txt && pip install -r requirements.txt && uvicorn app.api_simple:app --host 0.0.0.0 --port 8000 --reload"
    ports:
      - "8000:8000"
    env_file:
      - .env
    environment:
      - HTTP_PROXY=http://172.17.0.1:10809
      - HTTPS_PROXY=http://172.17.0.1:10809
      - http_proxy=http://172.17.0.1:10809
      - https_proxy=http://172.17.0.1:10809
    depends_on:
      - redis

  # Celery Worker для простых задач с Gemini
  worker:
    build: .
    command: sh -c "cp requirements_minimal.txt requirements.txt && pip install -r requirements.txt && celery -A app.api_simple:celery_app worker --loglevel=info"
    env_file:
      - .env
    environment:
      - HTTP_PROXY=http://172.17.0.1:10809
      - HTTPS_PROXY=http://172.17.0.1:10809
      - http_proxy=http://172.17.0.1:10809
      - https_proxy=http://172.17.0.1:10809
    depends_on:
      - redis
